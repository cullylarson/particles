{
    "rules": {
        "indent": [ 2, 4 ],
        "quotes": [ 2, "double" ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "never" ],
        "comma-dangle": [ 0, "always-multiline" ]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "ecmaFeatures": {
        "modules": true,
        "spread": true,
        "destructuring": true,
        "experimentalObjectRestSpread": true
    },
    "extends": "eslint:recommended"
}
